<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8" />
    <style>
        /* ----- Global ----- */
        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            margin: 0;
            padding: 0 40px;
            color: #333;
        }

        header {
            text-align: center;
            padding: 20px 0;
            border-bottom: 2px solid #1268b0;
        }

        header h1 {
            margin: 0;
            font-size: 28px;
            color: #1268b0;
        }

        .section {
            margin-top: 30px;
        }

        .section h2 {
            font-size: 20px;
            margin-bottom: 10px;
            color: #1268b0;
        }

        /* ----- Tables ----- */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: #fafafa;
        }

        /* ----- Status badge ----- */
        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            color: #fff;
        }

        .badge.okay {
            background-color: #28a745;
        }

        .badge.damaged {
            background-color: #dc3545;
        }

        /* ----- Description ----- */
        .description p {
            line-height: 1.5;
            margin: 0;
        }

        /* ----- Image grid ----- */
        .image-grid {
            margin-top: 15px;
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: flex-start;
        }

        .image-grid img {
            /* keep a reasonable size but allow shrinking on small screens */
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        /* ----- Footer ----- */
        footer {
            position: fixed;
            bottom: 20px;
            left: 0;
            right: 0;
            text-align: center;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>

<body>
    <header>
        <h1>Prüfbericht-Details</h1>
    </header>

    <!-- ==== Report Info ==== -->
    <div class="section">
        <h2>Allgemeine Angaben</h2>
        <table>
            <tr>
                <th>ID</th>
                <td>
                    <%= report.shortId %>
                </td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>
                    <%= report.title || "–" %>
                </td>
            </tr>
            <tr>
                <th>Benutzer‑E‑Mail</th>
                <td>
                    <%= report.userEmail %>
                </td>
            </tr>
            <tr>
                <th>Projekt</th>
                <td>
                    <%= report.projectId ? report.projectId.shortId : "–" %>
                </td>
            </tr>
            <tr>
                <th>Erstellt am</th>
                <td>
                    <%= report.date ? new Date(report.date).toLocaleString("de-DE"): "–" %>
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    <% if (report.isDamaged) { %>
                        <span class="badge damaged">Defekt</span>
                        <% } else { %>
                            <span class="badge okay">Okay</span>
                            <% } %>
                </td>
            </tr>
        </table>
    </div>

    <!-- ==== Beschreibung ==== -->
    <div class="section description">
        <h2>Beschreibung</h2>
        <p>
            <%= report.description || "Keine Beschreibung angegeben." %>
        </p>
    </div>

    <!-- ==== Bilder (falls vorhanden) ==== -->
    <div class="section">
        <h2>Bild(er)</h2>

        <div class="image-grid">
            <% if (report.images && Array.isArray(report.images) && report.images.length) { %>
                <% report.images.slice(0, 6).forEach(function (imgPath) { const fullSrc=imgPath.startsWith("http") ?
                    imgPath : baseUrl.replace(/\/$/, "" ) + imgPath; // imgPath is "/uploads/..." %>
                    <img src="<%= fullSrc %>" alt="Report Image" />
                    <% }); %>
                        <% } else { %>
                            <% for (let i=1; i <=6; i++) { %>
                                <img src="https://via.placeholder.com/150?text=Beispiel+Bild+<%= i %>"
                                    alt="Beispiel Bild <%= i %>" />
                                <% } %>
                                    <% } %>
        </div>
    </div>

    <footer>
        Erstellt am <%= new Date().toLocaleString("de-DE") %>
    </footer>
</body>

</html>